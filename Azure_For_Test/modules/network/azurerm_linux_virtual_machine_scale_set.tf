locals {
  first_public_key = "ssh-rsa  you@me.com"
}

resource "azurerm_linux_virtual_machine_scale_set" "example" {
  name                = var.azurerm_linux_virtual_machine_scale_set_name
  resource_group_name = var.azurerm_resource_group.example.name
  location            = var.azurerm_resource_group.example.location
  sku                 = var.sku_size
  instances           = var.instances
  admin_username      = var.admin_username

  admin_ssh_key {
    username   = var.username
    public_key = local.first_public_key
  }

  source_image_reference {
    publisher = "Canonical"
    offer     = "0001-com-ubuntu-server-jammy"
    sku       = "22_04-lts"
    version   = "latest"
  }

  os_disk {
    storage_account_type = "Standard_LRS"
    caching              = "ReadWrite"
  }

  network_interface {
    name    = "example"
    primary = true

    ip_configuration {
      name      = "internal"
      primary   = true
      subnet_id = var.azurerm_subnet.subnets.id
    }
  }
}